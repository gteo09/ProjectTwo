<div id="home">
  <div class="container">
    <div class="search-container">
    <div class="row">
      <div style="text-align:center">
      <div class="col-8 offset-2">
        <h4>{{msg}}</h4>

        <div class="input-field col s12">
          <select>
            <option value="" disabled selected>Choose your option</option>
            <option value="1">Titles</option>
            <option value="2">Actors</option>
            <option value="3">Years</option>
            <option value="4">Television</option>
          </select>
          <label>Select search category</label>
        </div>

        <form class="clearfix mb-4" action="/api/search"> 
          <div class="form-group">
            <label for="example-text">Enter a keyword to search the movie database</label>
            <input type="text" name="input" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Keyword search">
          </div>
          <button id="include" class="btn btn-primary">Submit</button>
        </form>

        <div class="row selections">
          <h4 id="standards-header"></h4>
          <section class="col l12" id="stock-genres"></section>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script src="/js/index.js"></script>